#!/bin/bash
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=2
#SBATCH --job-name=scf
#SBATCH --mem-per-cpu=4000M
#SBATCH --time=00:50:00
#SBATCH --mail-user=
#SBATCH --mail-type=ALL
#SBATCH --partition=Def

module purge
source /home/ucl/naps/gbrunin/SetEnv.sh intel13_intel

export OMP_NUM_THREADS=1
unset SLURM_CPUS_PER_TASK

MPI="mpirun"
MPIOPT="-np 2"
QE="/home/ucl/naps/gbrunin/q-e/bin/pw.x"


${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e02.out
sed -i -e "s/ecutwfc = 2/ecutwfc = 4/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e04.out
sed -i -e "s/ecutwfc = 4/ecutwfc = 8/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e08.out
sed -i -e "s/ecutwfc = 8/ecutwfc = 10/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e10.out
sed -i -e "s/ecutwfc = 10/ecutwfc = 12/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e12.out
sed -i -e "s/ecutwfc = 12/ecutwfc = 14/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e14.out
sed -i -e "s/ecutwfc = 14/ecutwfc = 16/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e16.out
sed -i -e "s/ecutwfc = 16/ecutwfc = 18/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e18.out
sed -i -e "s/ecutwfc = 18/ecutwfc = 20/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e20.out
sed -i -e "s/ecutwfc = 20/ecutwfc = 25/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e25.out
sed -i -e "s/ecutwfc = 25/ecutwfc = 30/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e30.out
sed -i -e "s/ecutwfc = 30/ecutwfc = 35/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e35.out
sed -i -e "s/ecutwfc = 35/ecutwfc = 40/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e40.out
sed -i -e "s/ecutwfc = 40/ecutwfc = 45/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e45.out
sed -i -e "s/ecutwfc = 45/ecutwfc = 50/g" Conv_etot-ecut.in
${MPI} ${MPIOPT} ${QE} -inp Conv_etot-ecut.in > Conv_etot-e50.out


echo "--"
