&control
 calculation = 'scf'
 prefix = 'SnO2'
 pseudo_dir = '../Pseudo_potentials'
 outdir = './'
 !etot_conv_thr = 1.0d-3
 !forc_conv_thr = 1.0d-2
/
&system
 ibrav     = 6 !Tetragonal Primitive
 celldm(1) = 9.11  !lattice parameter in a.u. = a = 4.835A
 celldm(3) = 0.67
 nat = 6
 ntyp = 2
 ecutwfc = 15 
/
&electrons
 conv_thr  = 1.0d-12
/
&ions
!ion_dynamics='bfgs'
/
&cell
!cell_dynamics='bfgs'
!cell_dofree = 'xyz'
/

ATOMIC_SPECIES
